<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-lg-6 col-sm-10">

        <div id="main-form" class="border-primary rounded">
          <h2 id="page-title">New User Registration</h2>
          <form class="clearfix mb-4" action="POST">
            <div class="form-group">
              <label for="user-name">Name: </label>
              <input type="text" id="user-name" class="form-control" aria-describedby="user-name"
                placeholder="Enter name">
            </div>
            <div class="form-group">
              <label for="user-username">Username: </label>
              <input type="text" class="form-control" id="user-username" aria-describedby="user-username"
                placeholder="Enter username"></input>
            </div>
            <div class="form-group">
              <label for="user-email">Email Address: </label>
              <input type="text" id="user-email" class="form-control" aria-describedby="user-email"
                placeholder="Enter Email">
            </div>
            <hr />
            <div class="form-group">
              <label for="user-password">Password</label>
              <p class="instructions">Must be between 8 and 32 characters and contain the following: 2 special letters,
                2
                numbers, 2 letters
              </p>
              <input type="text" id="user-password" class="form-control" aria-describedby="user-password"
                placeholder="Enter password">
            </div>

            <div class="form-group">
              <label for="user-password">Confirm Password</label>
              <input type="text" id="user-password2" class="form-control" aria-describedby="user-password2"
                placeholder="Confirm password">
            </div>

            <button id="submit" class="btn btn-primary float-right">Submit</button>
          </form>
        </div>
      </div>

      <div id="users-div" class="col-md-6 col-lg-6 col-sm-10 border-secondary rounded">
        <button id="delete-all" class="btn btn-warning float-right">Delete ALL Users</button>
        <h3 id="exist-title">Existing Users:</h3>
        <p class="instructions">Edit or delete individual users</p>

        <ul id="user-list" class="list-group">
          {{!-- This is filled dynamically --}}
        </ul>
      </div>

    </div>
  </div>
</div>